{
    "functions": {
        "api/index.php": {
            "runtime": "vercel-php@0.7.3"
        }
    },
    "routes": [
        { "src": "/public/(.*)", "dest": "/public/$1" },
        { "src": "/(.*)", "dest": "/api/index.php" }
    ],
    "builds": [
        { "src": "vercel-build.sh", "use": "@vercel/static-build", "config": { "distDir": "public" } }
    ],
    "env": {
        "APP_ENV": "production",
        "APP_DEBUG": "false"
    }
}